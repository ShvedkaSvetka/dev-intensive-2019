<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.profile.ProfileActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ru.skillbranch.devintensive.ui.custom.AspectRatioImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/profile_bg"
            app:aspectRatio="1.78" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginBottom="@dimen/font_normal_16">

            <ImageButton
                android:layout_width="@dimen/button_size_large"
                android:layout_height="@dimen/button_size_large"
                android:layout_marginTop="36dp"
                android:layout_marginRight="@dimen/spacing_huge_32"
                android:layout_toLeftOf="@+id/iv_avatar"
                android:background="@drawable/btn_round_bg"
                android:src="@drawable/ic_brightness_high_black_24dp" />

            <ImageView
                android:id="@+id/iv_avatar"
                android:layout_width="@dimen/button_size_x_large"
                android:layout_height="@dimen/button_size_x_large"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_account_circle_black_24dp" />

            <ImageButton
                android:layout_width="@dimen/button_size_large"
                android:layout_height="@dimen/button_size_large"
                android:layout_marginLeft="@dimen/spacing_huge_32"
                android:layout_marginTop="36dp"
                android:layout_toRightOf="@+id/iv_avatar"
                android:background="@drawable/btn_round_bg"
                android:src="@drawable/ic_edit_black_24dp" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_avatar"
                android:layout_centerHorizontal="true"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_large_24"
                tools:text="Test Test" />

            <TextView
                android:id="@+id/tv_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_name"
                android:layout_centerHorizontal="true"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_normal_16"
                tools:text="Junior Android Developer" />
        </RelativeLayout>


    </FrameLayout>
</LinearLayout>