<?xml version="1.0" encoding="utf-8"?>
<!--Ripple effect for material button -->
<ripple
        xmlns:android="http://schemas.android.com/apk/res/android" android:color="@color/color_accent">
    <item android:id="@android:id/mask">
        <shape android:shape="oval">
            <solid android:color="@color/color_accent"></solid>
        </shape>
    </item>
    <item android:id="@android:id/background">
        <shape android:shape="oval">
            <solid android:color="?attr/colorBackgroundFloating"></solid>
        </shape>
    </item>
</ripple>