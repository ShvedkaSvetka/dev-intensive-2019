<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>
    <style name="Profile">
        <item name="android:paddingTop">4dp</item>
        <item name="android:textColor">@color/color_primary_dark</item>
    </style>

    <style name="Profile.EditText" parent="Profile">
        <item name="android:enabled">false</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <style name="Profile.EditText.Single" parent="Profile">
        <item name="android:singleLine">true</item>

    </style>

    <style name="Profile.EditText.Multiline" parent="Profile">
        <item name="android:inputType">textMultiLine</item>
        <item name="android:maxLength">128</item>

    </style>

    <style name="Profile.Header" parent="Profile">
        <item name="android:textColor">@android:color/white</item>
    </style>


    <style name="Profile.NickName" parent="Profile.Header">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/color_gray_light</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="Profile.Rank" parent="Profile.Header">
        <item name="android:textColor">@color/color_gray_light</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="Profile.Metrics" parent="Profile">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Profile.Metrics.Label" parent="Profile.Metrics">
        <item name="android:textSize">@dimen/font_normal_16</item>
    </style>

    <style name="Profile.Metrics.Value" parent="Profile.Metrics">
        <item name="android:drawablePadding">4dp</item>
        <item name="android:textSize">20dp</item>
    </style>
</resources>
